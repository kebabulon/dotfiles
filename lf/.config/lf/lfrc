## SETTINGS
# bla bla boring
set shell sh

set shellopts '-eu'
set ifs "\n"
set cursorpreviewfmt "\033[7;2m"

set incsearch
set incfilter

## ACTUAL SETTINGS
# previwer
set sixel true
set previewer ~/.config/lf/previewer

# visual
set scrolloff 10
set drawbox true

## CUSTOM COMMANDS
# basic
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

%mkdir -p ~/.trash # create the trash folder lmao
cmd trash %set -f; mv $fx ~/.trash

# archive
cmd extract ${{
    set -f
    case $f in
        *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
        *.tar.gz|*.tgz) tar xzvf $f;;
        *.tar.xz|*.txz) tar xJvf $f;;
        *.zip) unzip $f;;
        *.rar) unrar x $f;;
        *.7z) 7z x $f;;
    esac
}}

cmd zip %zip -r "$f" "$f"
cmd tar %tar cvf "$f.tar" "$f"
cmd targz %tar cvzf "$f.tar.gz" "$f"
cmd tarbz2 %tar cjvf "$f.tar.bz2" "$f"

cmd open &{{
    case $(file --mime-type -Lb $f) in
        text/*) lf -remote "send $id \$$EDITOR \$fx";;
        *) for f in $fx; do $OPENER $f > /dev/null 2> /dev/null & done;;
    esac
}}

cmd broot_jump ${{
  f=$(mktemp)
  res="$(broot --outcmd $f && cat $f | sed 's/cd //')"
  rm -f "$f"
  if [ -f "$res" ]; then
    cmd="select"
  elif [ -d "$res" ]; then
    cmd="cd"
  fi
  lf -remote "send $id $cmd \"$res\""
}}

## REMAPS
map <enter> shell

# show the result of execution of previous commands
map ` !true

# dedicated keys for file opener actions
map o &mimeopen $f
map O $mimeopen --ask $f

# remove defaults
map o
map d
map c
map e

# basics
map . set hidden!

map p paste
map x cut
map y copy
map r rename
map C clear

map H top
map L bottom
map R reload

map cf mkfile
map cd mkdir
map ch chmod

map az zip
map at tar
map ag targz
map ab tarbz2
map ae extract

map f broot_jump
map '/' :setfilter; filter
map '<esc>' setfilter

## QUICK GOTO
map gtr cd ~/.trash
map gm cd ~/music
map gd cd ~/downloads
map gD cd ~/documents
map ge cd ~/desktop

map gp cd ~/projects
map gu cd ~/uni

map gni cd ~/.local/share/nicotine/downloads
