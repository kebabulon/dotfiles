# DEFAULT BINDS: /usr/share/doc/ncmpcpp/bindings 
# vimming

def_key "h"
  previous_column
def_key "j"
  scroll_down
def_key "k"
  scroll_up
def_key "l"
  next_column

def_key "ctrl-u"
    page_up
def_key "ctrl-d"
    page_down

def_key "n"
    next_found_item
def_key "N"
    previous_found_item

def_key "."
    show_lyrics
